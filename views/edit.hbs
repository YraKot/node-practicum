<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Course title</label>
        <span class="helper-text" data-error="Enter price">Enter title</span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter price">Enter price</span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="Enter price">Enter url</span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Edit</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Remove</button>
</form>